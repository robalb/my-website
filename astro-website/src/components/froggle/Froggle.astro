---
import './style.css';
export interface Props {
	prevBt: boolean;
	nextBt: boolean;
	restartBt: boolean;
  showLevel: boolean;
  level: number;
}

const {prevBt=true, nextBt=true, restartBt=true, showLevel=true, level=0} = Astro.props;

---
{
showLevel &&
<h3 id="level-txt" class="level">level 1</h3>
}
<div id="container">
  <svg viewBox='0 0 1 1'></svg>
</div>
<div class="controls">
  {
    prevBt &&
    <button id="previous-bt">&lt Prev</button>
  }
  {
    restartBt &&
    <button id="restart-bt">Restart</button>
  }
  {
    nextBt &&
    <button id="next-bt">Next &gt</button>
  }
</div>

<script src="./konva.js" ></script>
<script src="./script.js" ></script>
</script>

<style>
</style>
