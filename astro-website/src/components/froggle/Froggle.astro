---
import './style.css';
export interface Props {
	prevBt: boolean;
	nextBt: boolean;
	restartBt: boolean;
  showLevel: boolean;
  level: number;
}

let {prevBt=true, nextBt=true, restartBt=true, showLevel=true, level=0} = Astro.props;
level=1

---
{
showLevel &&
<h3 id="level-txt" class="level">level {level}</h3>
}
<input type="number" value={level} id="level-select" />
<div id="container" aria-label="Froggle game canvas. This is a mouse only drag-and-drop game">
  <svg viewBox='0 0 1 1'></svg>
</div>
<div class="controls" aria-controls="container">
  {
    prevBt &&
    <button id="previous-bt">&lt Prev</button>
  }
  {
    restartBt &&
    <button id="restart-bt">Restart</button>
  }
  {
    nextBt &&
    <button id="next-bt">Next &gt</button>
  }
</div>

<script src="./konva.js" ></script>
<script src="./script.js" ></script>
</script>

<style>
input{
display:none;
}
</style>
